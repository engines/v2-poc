{
	"variables": {
		"suite": "beowulf",
		"tag": "",
		"datestamp": "{{isotime \"20060102\/0304\"}}"
	},
	"builders": [
		{
			"name": "{{user `suite`}}",
			"type": "lxd",
			"image": "images:devuan/beowulf/cloud",
			"output_image": "engines/{{user `suite`}}/base/{{user `datestamp`}}{{user `tag`}}",
			"publish_properties": {
				"description": "Engines {{user `suite`}} image",
				"aliases": "{{user `suite`}}",
				"architecture": "amd64",
				"os": "devuan",
				"release": "Devuan GNU/Linux 3.0"
			}
		}
	],
	"provisioners": [
		{
			"type": "file",
			"source": "files",
			"destination": "tmp/"
		},
		{
			"type": "file",
			"source": "build_scripts/",
			"destination": "tmp"
		},
		{
			"type": "file",
			"source": "injections",
			"destination": "tmp/"
		},
		{
			"type": "shell",
			"scripts": [
				"/tmp/build_scripts/provision_setup"
			]
		},
		{
			"type": "shell",
			"environment_vars": [
				"ENGINES_PACKAGES=''"
			],
			"scripts": [
				"/tmp/build_scripts/install-packages",
				"/tmp/build_scripts/provision-injections",
				"/tmp/build_scripts/remove-packages"
			]
		},
		{
			"type": "shell",
			"scripts": "/tmp/build_scripts/post_provision"
		}
	]
}
